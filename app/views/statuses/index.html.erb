<div class="page-header">
  <h1>All Statuses</h1>
</div>

<% @statuses.each do |status| %>

  <div class="status">
    <strong><%= status.name %></strong>
    <p><%= status.content %></p>
    

    <div class="admin">
      <div class="btn-group">
        <button type="button" class="btn btn-default"><%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <button type="button" class="btn btn-default"><%= link_to "Show", status %></button>
        <button type="button" class="btn btn-default"><%= link_to "Edit", edit_status_path(status) %></button>
        <button type="button" class="btn btn-default"><%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %></button>
      </div>
    </div>

  </div>
<% end %>